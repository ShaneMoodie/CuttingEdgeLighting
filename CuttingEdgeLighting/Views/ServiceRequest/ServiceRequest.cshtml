<body>
    <div class="servicesReq">
            <form class="serviceReqForm" action="mailto:carl@cuttingedgelighting.com" method="post" enctype="text/plain">
                <div class="col-left">
                    <label>
                        <span class="required">* </span><span>Name:</span><br />
                        <input type="text" name="ServiceRequestName" required />
                    </label><br />
                    <label>
                        <span class="required">* </span><span>Email:</span><br />
                        <input type="text" name="ServiceRequestEmail" required />
                    </label><br />
                    <label>
                        <span>Company:</span><br />
                        <input type="text" name="ServiceRequestCompany" />
                    </label><br />
                    <label>
                        <span>Address:</span><br />
                        <input type="text" name="ServiceRequestAddress" />
                    </label><br />
                    <label class="serviceType">
                        <span class="required">* </span><span>Please choose what type of servicing you require:</span><br />
                        <input type="radio" name="serviceType" value="Electrical"/> Electrical<br />
                        <input type="radio" name="serviceType" value="Lighting"/> Lighting<br />
                        <input type="radio" name="serviceType" value="Energy"/> Energy<br />
                        <input type="radio" name="serviceType" value="Multiple"/> Multiple<br />
                    </label><br />
                </div>
                <div class="col-right">
                    <label>
                        <span>City:</span><br />
                        <input type="text" name="ServiceRequestCity" />
                    </label><br />
                    <label>
                        <span>State:</span><br />
                        <input type="text" name="ServiceRequestState" />
                    </label><br />
                    <label>
                        <span>Zip Code:</span><br />
                        <input type="text" name="ServiceRequestZip" />
                    </label><br />
                    <label>
                        <span>Phone Number:</span><br />
                        <input type="text" name="ServiceRequestNumber" />
                    </label><br />
                </div>
                <label class="commentText">
                    <span>Comments:</span><br />
                    <textarea name="comments"></textarea><br />
                </label>
                <div class="formSubmitButton">
                    <input type="submit" value="Submit" /><br />
                    <br />
                </div>
            </form>
        </div>
    </div>
</body>
