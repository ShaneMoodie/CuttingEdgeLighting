    </nav>
    
    <div class="container body-content">
        @RenderBody()
        <footer class="foot">
            <div>
                <span>&copy; @DateTime.Now.Year - Cutting Edge Lighting - Website Design By: <a href="https://shanemoodie.github.io/" style="color: black;">Shane Moodie</a></span>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>